	<!-- Uncomment for opinion-mining topology -->
	
	<edges>
		<edge source="OpinionSource" destination="CategoryDispatcher"></edge>
		<edge source="CategoryDispatcher" destination="AgeNormalizer"></edge>
		<edge source="CategoryDispatcher" destination="CityNormalizer"></edge>
		<edge source="AgeNormalizer" destination="AgeAnalyzer"></edge>
		<edge source="CityNormalizer" destination="CityAnalyzer"></edge>
		<edge source="AgeAnalyzer" destination="OpinionAnalyzer"></edge>
		<edge source="CityAnalyzer" destination="OpinionAnalyzer"></edge>
	</edges>
	
	
	<!--To fulfill only for comparison with  first topology-->
	<topology>uniform_autoscale_shuffle</topology>
	<short_topology>uni_as_shuffle</short_topology>
	<stream_type>9</stream_type>
	
